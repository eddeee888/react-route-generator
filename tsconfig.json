{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es5", "es6", "ES2017", "es2019", "dom", "esnext.asynciterable"],
    "module": "commonjs",
    "sourceMap": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,

    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "sample/output"]
}
